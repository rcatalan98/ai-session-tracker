#!/bin/bash
# Pre-push hook: full validation

set -e

echo "Running pre-push checks..."

# Format
echo "→ cargo fmt --check"
cargo fmt --check

# Lint
echo "→ cargo clippy"
cargo clippy -- -D warnings

# Build
echo "→ cargo build"
cargo build

# Test
echo "→ cargo test"
cargo test

echo "✓ Pre-push checks passed"
